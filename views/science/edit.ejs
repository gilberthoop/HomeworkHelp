<html>
    <head>
        <title>Edit Science Question</title>
        <% include ../partials/head %>
    </head>
    <body>
        <% include ../partials/header %>
        <div class="container">
            <div class="row">
                <h1 style="text-align:center">Edit <%= science.title %></h1>
                <div style="width:30% margin:25px auto;">
                    <form action="/science/<%= science._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="science[title]" value="<%= science.title %>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="science[question]" value="<%= science.question %>">
                        </div>
                        <div class="form-group">
                             <button class="btn btn-lg btn-primary btn-block">Submit</button>
                        </div>
                    </form>
                    <a href="/science">Go Back</a>
                </div>
            </div>
        </div>
        <% include ../partials/footer %>
    </body>
</html>
