<html>
    <head>
        <title>New answer - Math</title>
        <% include ../../partials/head %>
    </head>
    <body>
        <% include ../../partials/header %>
        <div class="container">
            <div class="row">    
                <h1 style="text-align:center">Add new answer to <%= math.title %></h1>
                <div style="width: 30%; margin: 25px auto;">
                    <form action="/math/<%= math._id %>/answers/math" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="answer[text]" placeholder="answer">
                        </div> 
                        <div class="form-group">
                             <button class="btn btn-lg btn-primary btn-block">Submit</button>
                        </div>
                        
                    </form>
                    <a href="/math">Go Back</a> 
                </div> 
           </div> 
        </div>
        <% include ../../partials/footer %>
    </body>
</html>
