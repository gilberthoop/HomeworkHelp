<html>
    <head>
        <title>New History Question</title>
        <% include ../partials/head %>
    </head>
    <body>
        <% include ../partials/header %>
        <div class="container">
            <div class="row">    
                <h1 style="text-align:center">Create a new History question</h1>
                <div style="width: 30%; margin: 25px auto;">
                    <form action="/history" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="title" placeholder="category">
                        </div> 
                        <div class="form-group">
                             <input class="form-control" type="text" name="question" placeholder="question">
                        </div>
                        <div class="form-group">
                             <button class="btn btn-lg btn-primary btn-block">Submit</button>
                        </div>
                        
                    </form>
                    <a href="/history">Go Back</a> 
                </div> 
           </div> 
        </div>
        <% include ../partials/footer %>
    </body>
</html>
